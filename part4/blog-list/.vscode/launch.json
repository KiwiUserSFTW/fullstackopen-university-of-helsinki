{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug All Tests",
      "program": "${workspaceFolder}/index.js",
      "runtimeExecutable": "node",
      "args": ["--test"],
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Current Test File",
      "program": "${file}",
      "runtimeExecutable": "node",
      "args": ["--test"],
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
